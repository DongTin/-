int UI_Stepfour_tea_3(int x)
{
	string tem_password;
	string  ls1, ls2;
	system("cls");
	cout << "                  |====================================================================================|" << endl;
	cout << "                  |                                                                                    |" << endl;
	cout << "                  |                                                                                    |" << endl;
	cout << "                  |                            内蒙古大学选课系统:教师登入                             |" << endl;
	cout << "                  |                                                                                    |" << endl;
	cout << "                  |====================================================================================|" << endl;
	cout << "                                                      请输入旧密码："; cin >> tem_password;
Change_Pass:if (tem_password == tea[x].password)
{
	cout << "                  |====================================================================================|" << endl;
	cout << "                                                      请输入新密码："; cin >> ls1;
	cout << "                  |====================================================================================|" << endl;
	cout << "                                                      再次确定密码："; cin >> ls2;
	if (ls1 == ls2)
	{
		tea[x].password = ls1;
		ReadFiles_tea();
		cout << "                  |====================================================================================|" << endl;
		cout << "                  |                                   修改密码成功                                     |" << endl;
		cout << "                  |====================================================================================|" << endl;
		cout << "                                                      键入0返回上一级";
		return 1;
	}
	else
		goto Change_Pass;
}
			else
{
	cout << "                  |====================================================================================|" << endl;
	cout << "                                                  密码错误，将自动返回上级菜单";
	return 0;
}
}

int main()
{
	int s_times = 5;
	int t_times = 5;
	int adm_times = 3;
	int na, nb;
	string bug1,bug2;

	ReadFiles_stu();

	while (1)
	{
		UI_Stepone();
		cin >> ID_number;

		while (1)
		{

			if (ID_number == "1")//学生
