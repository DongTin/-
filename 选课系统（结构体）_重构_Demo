void UI_Stepfour_stu_2(int x)
{
	string tem_class;

	system("cls");
	cout << "                  |====================================================================================|" << endl;
	cout << "                  |                                                                                    |" << endl;
	cout << "                  |                                                                                    |" << endl;
	cout << "                  |                            内蒙古大学选课系统:学生登入                             |" << endl;
	cout << "                  |                                                                                    |" << endl;
	cout << "                  |====================================================================================|" << endl;
	cout << "                                           请输入想要修读或退选的课程："; cin >> tem_class; cout << endl;
	if (tem_class == "C++程序设计基础")
	{
		stu[x].cpp = (!stu[x].cpp);
		cout << "                  |====================================================================================|" << endl;
		cout << "                  |                                修改课程状态成功                                    |" << endl;
	}
	else if (tem_class == "英语")
	{
		stu[x].english = (!stu[x].english);
		cout << "                  |====================================================================================|" << endl;
		cout << "                  |                                修改课程状态成功                                    |" << endl;
	}
	else if (tem_class == "数学")
	{
		stu[x].math = (!stu[x].math);
		cout << "                  |====================================================================================|" << endl;
		cout << "                  |                                修改课程状态成功                                    |" << endl;
	}
	else
		cout << "                                               无此课程";
	cout << "                  |====================================================================================|" << endl;
	cout << "                                                      键入0返回上一级";
}

int UI_Stepfour_stu_3(int x)
{
	string tem_password;
	string  ls1,ls2;
	system("cls");
	cout << "                  |====================================================================================|" << endl;
	cout << "                  |                                                                                    |" << endl;
	cout << "                  |                                                                                    |" << endl;
	cout << "                  |                            内蒙古大学选课系统:学生登入                             |" << endl;
	cout << "                  |                                                                                    |" << endl;
	cout << "                  |====================================================================================|" << endl;
	cout << "                                                      请输入旧密码："; cin >> tem_password;
	Change_Pass:if (tem_password == stu[x].password)
	{
		cout << "                  |====================================================================================|" << endl;
		cout << "                                                      请输入新密码："; cin >> ls1;
		cout << "                  |====================================================================================|" << endl;
		cout << "                                                      再次确定密码："; cin >> ls2;
		if (ls1 == ls2)
		{
			stu[x].password = ls1;
			ReadFiles_stu();
			cout << "                  |====================================================================================|" << endl;
			cout << "                  |                                   修改密码成功                                     |" << endl;
			cout << "                  |====================================================================================|" << endl;
			cout << "                                                      键入0返回上一级";
			return 1;
		}
		else
			goto Change_Pass;
	}
				else
	{
		cout << "                  |====================================================================================|" << endl;
		cout << "                                                  密码错误，将自动返回上级菜单";
		return 0;
	}
}

